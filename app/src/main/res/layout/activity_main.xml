<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.germanco.mygimbal.MainActivity">
    <TextView
        android:id="@+id/etiquetaNombre"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Nombre del lugar:"/>
    <TextView
        android:layout_below="@+id/etiquetaNombre"
        android:id="@+id/etiquetaBeaconID"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Beacon ID:"/>
    <TextView
        android:layout_below="@+id/etiquetaBeaconID"
        android:id="@+id/etiquetaBeaconUUID"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Beacon UUID:"/>
    <TextView
        android:id="@+id/etiquetaBeaconName"
        android:layout_below="@+id/etiquetaBeaconUUID"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Nombre del Beacon:"/>
    <TextView
        android:id="@+id/etiquetaBeaconURL"
        android:layout_below="@+id/etiquetaBeaconName"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Beacon URL:"/>
    <TextView
        android:id="@+id/etiquetaBeaconRSSI"
        android:layout_below="@+id/etiquetaBeaconURL"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Beacon RSSI:"/>
    <TextView
        android:id="@+id/etiquetaBeaconBateria"
        android:layout_below="@+id/etiquetaBeaconRSSI"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Bateria del Beacon:"/>
    <TextView
        android:id="@+id/etiquetaBeaconTemp"
        android:layout_below="@+id/etiquetaBeaconBateria"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Temperatura del beacon (Â°F):"/>

    <!--TEXT VIEWS PARA GUARDAR VALORES -->
    <TextView
    android:id="@+id/nombreLugar"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:layout_toRightOf="@+id/etiquetaNombre"/>
    <TextView
        android:id="@+id/beaconID"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconID"
        android:layout_below="@+id/nombreLugar"/>
    <TextView
        android:id="@+id/beaconUUID"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconUUID"
        android:layout_below="@+id/beaconID"/>
    <TextView
        android:id="@+id/nombreBeacon"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconName"
        android:layout_below="@+id/beaconUUID"/>
    <TextView
        android:id="@+id/urlBeacon"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconURL"
        android:layout_below="@+id/nombreBeacon"/>
    <TextView
        android:id="@+id/beaconRSSI"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconRSSI"
        android:layout_below="@+id/urlBeacon"/>
    <TextView
        android:id="@+id/beaconBateria"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconBateria"
        android:layout_below="@+id/beaconRSSI"/>
    <TextView
        android:id="@+id/beaconTemp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/etiquetaBeaconTemp"
        android:layout_below="@+id/beaconBateria"/>
</RelativeLayout>
